<div class="container">
  <h1>All our flats (<%= @flats.size %>)</h1>
  <div class="row">

    <% @flats.each do |flat| %>
      <div class=" col-3 m-3 border bg-light p-0 card-body">
        <div class="w-100 p-3">
          <h2 class="card-title "><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <div class="d-flex m-2">
              <i class="fa-solid fa-euro-sign"></i><p><%= flat.price_per_night%></p>
            </div>
            <div class="d-flex m-2">
              <i class="fa-solid fa-user"></i><p><%= flat.number_of_guests%></p>
            </div>
          </div>
          </div>
          <div class="card-footer bg-white w-100 p-2 d-flex justify-content-evenly">
          <%= link_to "more info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
      </div>
        </div>
    <% end %>
  </div>
</div>
